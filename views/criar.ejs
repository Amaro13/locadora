<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/css/style.css" rel="stylesheet" />
    <!-- Para Alerts -->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Para Alerts -->
    <title>Criar</title>
  </head>
  <body>
    <%- include('./partials/header.ejs')%>
    <main>
      <section id="form_container">
        <form method="post" action="/criar">
          <fieldset>
            <legend>Criar Filme</legend>
            <fieldset class="fieldset_data">
              <input type="text" name="nome" />
              <label for="nome">Nome Filme</label>
            </fieldset>

            <fieldset class="fieldset_data">
              <input type="text" name="diretor" />
              <label for="diretor">Nome Diretor</label>
            </fieldset>

            <fieldset class="fieldset_data">
              <input type="url" name="img" />
              <label for="img">Imagem</label>
            </fieldset>

            <fieldset class="fieldset_data">
              <input type="number" name="duracao" />
              <label for="duracao">Duração</label>
            </fieldset>

            <fieldset class="fieldset_data">
              <input type="text" name="ano" />
              <label for="ano">Ano de Lançamento</label>
            </fieldset>

            <fieldset class="fieldset_data">
              <input type="text" name="iframe" />
              <label for="iframe">Trailer</label>
            </fieldset>
            <div id="btn_container">
              <button id="btn_submit" type="submit">Enviar</button>
            </div>
          </fieldset>
        </form>
      </section>
    </main>
    <%- include('./partials/footer.ejs')%>
  </body>
</html>
